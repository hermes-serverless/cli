{
  "name": "hermes-cli",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "commander": "^2.20.0",
    "configstore": "^4.0.0",
    "inquirer": "^6.3.1"
  },
  "scripts": {
    "build-ts": "yarn tsc",
    "watch-ts": "yarn tsc -w",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/commander": "^2.12.2",
    "@types/configstore": "^4.0.0",
    "@types/inquirer": "^6.0.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^12.0.7",
    "jest": "^24.7.1",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
