{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/__tests__"]
}
